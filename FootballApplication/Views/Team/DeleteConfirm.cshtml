@model FootballApplication.Models.TeamDto

@{
    ViewBag.Title = "Delete Teams";
}

<a href="/Team/List">Go Back to List</a>
<h2>Delete Team</h2>

<h3>Are you sure you want to delete this team?</h3>
<div>
    <h4>Team Details</h4>
    <hr />
    <dl>
        <dt>Name:</dt>
        <dd>@Model.TeamName</dd>
        <dt>Bio:</dt>
        <dd>@Model.TeamBio</dd>
    </dl>

    <form action="/Team/Delete/@Model.TeamID" method="POST">
        <input type="submit" value="Delete" />
    </form>
</div>